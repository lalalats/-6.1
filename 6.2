void c_sum(int a[][3], int b[])
{
	int i, j;
	for(j=0; j<3; j++)
	{
		b[j]=0;
	    for(i=0; i<4; i++)
	        b[j]+=a[i][j]; 
	}
}
void r_sum(int a[][3], int c[]) 
{
	int i, j;
	for(i=0; i<4; i++)
	{
		c[i]=0;
		for(j=0; j<3; j++)
		    c[i]+=a[i][j];
		    
	}
}
